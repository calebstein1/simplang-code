{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Simplang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#arith"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.other.simplang",
				"match": "\\b(assign|new_array|random|get_input|print|print_array|in)\\b"
			},
			{
				"name": "keyword.control.simplang",
				"match": "\\b(begin_loop|for_each|continue|end_loop|end_loop_if_equal|end_loop_if_not_equal|end_loop_if_less|end_loop_if_less_or_equal|end_loop_if_greater|end_loop_if_greater_or_equal|if_equal|if_not_equal|if_less|if_less_or_equal|if_greater|if_greater_or_equal|end_if|done)\\b"
			}]
		},
		"arith": {
			"name": "keyword.operator.simplang",
			"match": "\\b(add|subtract|multiply|divide|modulo|increment|decrement|swap)\\b"
		},
		"strings": {
			"name": "string.quoted.double.simplang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.simplang",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.simplang"
}